<%- include("header") -%>

<div class="box" id="heading">
  <h1> Journal </h1>
</div>

<div class="entry">

<%  foundEntries.forEach(function(entry){ %>

  <form action="/delete" method="post">
    <div class="item">
      <input style="background-color: #db4343; color: #fff; font-size: 15px; margin-left: 15px;" type="submit" name="button" value="Delete"></input>
      <input type="hidden" name="entryId" value="<%=entry._id%>"></input>
      <a href="/entry/<%=entry._id%>"><button type="button">Edit</button></a>
      <p style="padding: 0px; margin-left: 15px;"><%=entry.date%></p>
      <p style="padding-left: 15px;"><%=entry.entry%></p>
    </div>
      <hr style="height:2px;border-width:0 ;background-color:rgb(0, 0, 0)">
  </form>

<%  }) %>

  <div class="addItem">
    <br>
    <form id="entryBox"class="item" action="/" method="post">
      <textarea type="text" name="newEntry" rows="10" cols="80" placeholder="New Entry" autocomplete="off"></textarea>
      <button type="submit" style="margin-left: 10px;" name="" value="newEntry">Add Entry</button>
    </form>
    <br>
  </div>
</div>

<%- include("footer") -%>
